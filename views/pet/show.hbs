{{!-- {{#if pets}} --}}
<ul class="pets">
	<li>
			<div class="card">
					<div class="name">
							{{ name }}
					</div>
					<div class="location">
							{{ location }}
					</div>
					<div class="age">
							Age: {{ age }}
					</div>
					<div class="animalType">
							{{ animalType }}
					</div>
					<div class="breed">
							{{ breed }}
					</div>
					<div class="gender">
							{{ gender }}
					</div>
					<div class="description">
							Description: {{ description }}
					</div>
					<div class="url">
							Learn more: {{ url }}
					</div>
					<div class="date-user">
							Submitted: {{ createdAt }}
					</div>
					<div class="buttons">
					<div>
							<form method="GET" action="/pet/{{id}}/edit" class="pet-form">
									<input type="submit" value='Update' class='btn-pet'>
							</form>
					</div>
					<div>
							<form method="POST" action="/pet/{{id}}?_method=DELETE" class="pet-form">
									<input type="submit" value='Delete' class='btn-pet'>
							</form>
					</div>
					</div>
			</div>
	</li>
</ul>
