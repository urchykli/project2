<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
            {{#if pets}}
            <ul class="pets listings">
                <h2>Pets</h2>
                {{#each pets}}
                <li>
                    <div class="card">
                        <a href="/pet/{{id}}">
                            <div class="name">
                                {{ name }}
                            </div>
                            <div class="location">
                                {{ location }}
                            </div>
                            <div class="description">
                                {{ description }}
                            </div>
                            <div class="date">
                                Submitted: {{ createdAt }}
                            </div>
                        </a>
                    </div>
                </li>
                {{/each}}
            </ul>
            {{/if}}
        </div>
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
            {{#if volunteers}}
            <ul class="volunteers listings">
                <h2>Volunteer</h2>
                {{#each volunteers}}
                <li>
                    <div class="card">
                        <a href="/volunteer/{{id}}">
                            <div class="title">
                                {{ title }}
                            </div>
                            <div class="location">
                                {{ location }}
                            </div>
                            <div class="description">
                                {{ description }}
                            </div>
                            <div class="date">
                                Submitted: {{ createdAt }}
                            </div>
                        </a>
                    </div>
                </li>
                {{/each}}
            </ul>
            {{/if}}
        </div>
    </div>
</div>